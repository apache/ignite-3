NODE_NAME=defaultNode

WORK_PATH=$IGNITE_HOME/work
LOGS_PATH=$IGNITE_HOME/log
LIBS_PATH=$IGNITE_HOME/lib
BIN_PATH=$IGNITE_HOME/bin
