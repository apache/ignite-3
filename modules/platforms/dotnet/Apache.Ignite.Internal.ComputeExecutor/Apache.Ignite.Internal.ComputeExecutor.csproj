<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>false</IsPackable>
        <RootNamespace>Apache.Ignite.Internal.ComputeExecutor</RootNamespace>

        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>false</SelfContained> <!-- Do not include runtime in the single file. -->
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Apache.Ignite\Apache.Ignite.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.4" />
    </ItemGroup>

</Project>
