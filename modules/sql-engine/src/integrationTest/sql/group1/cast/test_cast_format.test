query T
SELECT cast(time '16:17:12' as varchar format 'HH12:MI:SS a.m.')
----
04:17:12 P.M.

query T
SELECT cast(time '02:23:23' as varchar format 'HH12:MI:SS p.m.')
----
02:23:23 A.M.

query T
SELECT cast(time '23:30:55.4757' as varchar format 'FF2')
----
47

query T
SELECT cast(time '23:30:55.1233793' as varchar format 'FF5')
