            <artifactId>ignite-network-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.ignite</groupId>
            <artifactId>ignite-raft</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.ignite</groupId>
            <artifactId>ignite-raft-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.ignite</groupId>
